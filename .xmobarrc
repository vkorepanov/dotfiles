Config {
    font = "xft:DejaVu Serif: size=8:regular:antialias=true"
    , additionalFonts = [ "xft:DejaVu Serif: size=8:bold:antialias=true"
                        , "xft:DejaVu Serif: size=8:italic:antialias=true"
                        , "xft:DejaVu Serif: size=8:bold:italic:antialias=true"
                        , "xft:DejaVu Sans Mono: size=10:regular:antialias=true"
                        ]
    , alpha = 200
-- Light gray background and dirty white foreground.
    , bgColor = "#515151"
    , fgColor = "#CCCCCC"
-- Top left position.
    , position = Static {xpos = 0, ypos=0, width = 3510, height = 30 }
    , pickBroadest = False
    , persistent = False
    , lowerOnStart = True
    , hideOnStart = False
    , iconRoot = "."
    , allDesktops = True
    , overrideRedirect = True
    , commands = [
          Run MultiCpu [ "-L", "3"
                       , "-H", "50"
                       , "--normal","#99CC99"
                       , "--high","#F2777A"
                       ] 5
        , Run MPD
            [ "-t"
            , "<statei>vol:<volume>% <fn=2><artist></fn> - <title> <fn=1><fc=#66cccc><bar></fc></fn>"
            , "-M", "20"
            , "-b", "."
            , "-f", "|"
            , "-W", "20"
            , "--", "-P", "<fc=#99cc99>►</fc>"
            , "-S", "<fn=4><fc=#f2777a>■</fc></fn>"
            , "-Z", "<fn=4><fc=#ffcc66>‖</fc></fn>"
            ] 5
        , Run Network "enp7s0" [ "-L", "0"
                               , "-H", "70"
                               , "--normal", "#99CC99"
                               , "--high","#F2777A"
                               ] 10
        , Run Memory ["-t", "RAM: <usedratio> (<used> Mb)", "-S", "On" ] 10
        , Run Swap [ "-t", "Swap: <used> Mb" ] 10
        , Run Date "<fn=1><fc=#f99157>%a %d %B %Y</fc></fn> <fn=4><fc=#66cccc>%H:%M:%S</fc></fn>"
                   "date" 10
        , Run Kbd [ ("us", "<fn=3><fc=#99cc99>US</fc></fn>")
                  , ("ru", "<fn=3><fc=#ffcc66>RU</fc></fn>")]
        , Run StdinReader
    ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = " %StdinReader%}{%mpd% %multicpu% | %memory% %swap% | %enp7s0%| %date%  %kbd%"
}
